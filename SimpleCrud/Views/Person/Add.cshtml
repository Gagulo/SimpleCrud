@model SimpleCrud.Entities.User

@using (Html.BeginForm())
{
    <div class="form-group" style="margin-top: 10px;">
        <label for="FirstName">Name</label>
        @Html.EditorFor(m => m.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="LastName">Last Name</label>
        @Html.EditorFor(m => m.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="DateOfBirth">Date of Birth</label>
        @Html.EditorFor(m => m.DateOfBirth, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="IsActive">Is Active</label>
        @Html.EditorFor(m => m.IsActive, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-danger" value="Save" />
}